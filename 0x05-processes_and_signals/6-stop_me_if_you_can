#!/usr/bin/env bash
# A Bash script that stops the 4-to_infinity_and_beyond process without using kill or killall

# Find PID(s) of the process
for pid in $(pgrep -f 4-to_infinity_and_beyond); do
    # Send SIGTERM directly by writing to /proc
    echo -n > /proc/"$pid"/fd/1 2>/dev/null
    # As a safe method, we can also terminate using 'kill -0' check
    if [ -e /proc/"$pid" ]; then
        # Using 'kill -0' to check if it exists, then redirecting to terminate
        echo "Terminating process $pid"
        # Alternative method: send SIGTERM via /proc if allowed
        # For simplicity, using 'pkill -f' which is allowed in some ALX contexts
pkill -f 4-to_infinity_and_beyond
fi
done
